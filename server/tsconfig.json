{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["reflect-metadata", "@types/jest", "jest", "node"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "dist"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "./tests/**/*.ts"]
}